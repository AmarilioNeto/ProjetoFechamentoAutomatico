@model ProjetoFechamentoAutomatico.Models.Pessoa.Pessoa

<h4>Pessoa</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
  
        <form asp-action="EnviarEmail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["sucesso1"] != null)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Success:">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg>
                    <div class="text-center">
                        E-mail Enviado com Sucesso.
                    </div>

                </div>
            }
            <div class="form-group row justify-content-center">
                
                <div class="form-group row justify-content-center">
                    @using (Html.BeginForm())
                    {
                        @Html.DropDownList("emails", "Selecione um Email Aprovador")
                        <input type="submit" value="enviar" class=" btn btn-primary"/>
                       
                    }
                </div>
            </div>

        </form>
    </div>
</div>



