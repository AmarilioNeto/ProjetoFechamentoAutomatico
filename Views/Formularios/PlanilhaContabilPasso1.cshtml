        </svg>
        <div class="text-center">
            @ViewData["Errodata"]
        </div>

    </div>
}
@if (ViewData["ErrocampoObrigatorio"] != null)
{

    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div class="text-center">
            @ViewData["ErrocampoObrigatorio"]
        </div>

    </div>
}
@if (ViewData["Erroplanilha"] != null)
{

    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div class="text-center">
            @ViewData["Erroplanilha"]
        </div>

    </div>
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="PlanilhaContabilPasso1" class="row justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row  col-md-12">
                <div class="form-group col-md-4">
                    <label class="col-form-label">*Data Inicial</label>
                    <input asp-for="DataInicial" class="form-control" placeholder="Data Inicial:" aria-label="Data Inicial" type="date" />
                </div>
                <div class="form-group col-md-4">
                    <label class="col-form-label">*Data Final</label>
                    <input asp-for="DataFinal" class="form-control" placeholder="Data Final:" aria-label="Data Final" type="date" />
                </div>
                <div class="form-group col-md-4">
                    <label class="col-form-label">Situação</label>
                    <input asp-for="Situacao" class="form-control" aria-label="Situação" />
                </div>
            </div>
            <div class="row col-md-12">
                <div class="form-group col-md-4">
                    <label class="col-form-label">*Tipo de Movimento</label>
                    <input asp-for="NumTipoMovimento" class="form-control" placeholder="Obrigatorio" aria-label="Tipo de Movimento" />
                </div>
                <div class="form-group col-md-4">
                    <label class="col-form-label">*Deposito</label>
                    <input asp-for="Deposito" class="form-control" placeholder="Obrigatorio" aria-label="Deposito" />
                </div>
                <div class="form-group col-md-4">
                    <label class="col-form-label">Operação</label>
                    <input asp-for="Operacao" class="form-control" aria-label="Operação" />
                </div>
            </div>

            <div class="form-group col-md-12">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>


    </div>
</div>


